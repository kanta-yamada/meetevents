<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @event, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :title, class: 'form-control', rows: 5 %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
          <%= f.text_area :place, class: 'form-control', rows: 5 %>
          <%= f.text_area :time, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'events/events', events: @events %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ようこそMeetEventsへ</h1>
      <%= link_to 'サインアップへ!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>