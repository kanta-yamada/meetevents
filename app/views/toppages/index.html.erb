<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @event, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <%= f.label :title, 'title' %>
            <%= f.text_area :title, class: 'form-control', rows: 5 %> <br>
            <%= f.label :content, 'content' %>
            <%= f.text_area :content, class: 'form-control', rows: 5 %> <br>
            <%= f.label :place, 'place' %>
            <%= f.text_area :place, class: 'form-control', rows: 5 %> <br>
            <%= f.label :time, 'time' %>
            <%= f.text_area :time, class: 'form-control', rows: 5 %> <br>
          </div>
          <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'events/events', events: @events %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to MeetEvents</h1>
      <%= link_to 'for signup!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>